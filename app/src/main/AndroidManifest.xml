        </activity>
        <activity android:name=".ui.activity.LanguageSpecificActivity" />
        <activity
            android:name=".ui.activity.SongListActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ui.activity.ReadingLyricsActivity" />
        <activity android:name=".ui.activity.ArtistActivity" />
        <activity android:name=".ui.activity.ArtistListActivity" />
        <activity android:name=".ui.activity.SampArtistActivity" />
        <activity android:name=".ui.activity.SampArtistListActivity"></activity>
    </application>

</manifest>